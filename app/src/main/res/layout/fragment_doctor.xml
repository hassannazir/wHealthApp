<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/working_doctors"
        style="@style/ActivityHeading"
        android:textAlignment="center"
        android:padding="8dp"
        android:background="@color/teal_700"
        android:layout_margin="8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/searchClinic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search Clinic"
            android:background="@color/white"
            android:padding="5dp"
            android:layout_weight="1"
            android:inputType="text"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:autofillHints="">
        </EditText>
        <Button
            android:id="@+id/btnSearchClinic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="5dp"
            android:text="search"
            android:drawableStart="@drawable/ic_sharp_search_24"
            android:layout_marginEnd="5dp"
            android:layout_marginVertical="5dp"
            />
    </LinearLayout>
<androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:listitem="@layout/clinic_item_view"
    tools:itemCount="10"
    android:id="@+id/workingClinicRecyclerView"/>
</LinearLayout>